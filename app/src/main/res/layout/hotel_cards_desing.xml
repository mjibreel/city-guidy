<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="150dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/hotel_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/my_pic"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/hotel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Pic"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/hotel_image" />

        <RatingBar
            android:id="@+id/hotel_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@id/hotel_title"
            android:layout_toEndOf="@id/hotel_image"
            android:layout_marginStart="10dp"
            android:rating="4"/>

        <TextView
            android:id="@+id/hotel_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can search any place nearby or with-in the specified city"            android:layout_below="@id/mv_rating"
            android:layout_toEndOf="@id/hotel_image"
            android:layout_alignBottom="@id/hotel_rating"
            android:padding="10dp"
            tools:ignore="UnknownId" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>